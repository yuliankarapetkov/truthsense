{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"paths": {
			"$constants": ["./src/constants"],
			"$constants/*": ["./src/constants/*"],
			"$lib": ["./src/lib"],
			"$lib/*": ["./src/lib/*"],
			"$styles": ["./src/styles"],
			"$styles/*": ["./src/styles/*"],
			"$types": ["./src/types"],
			"$types/*": ["./src/types/*"]
		}
	},
	"include": ["src"]
}
